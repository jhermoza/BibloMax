@page
@model Hermoza.BibloMax.Integracion.Pages.Sedes.SOSedesModel
@{
    Layout = "_Layout";
}


<input type="hidden" id="__URL_SEDES" value="@Url.Action("ObtenerSedes","Sede")" />
<input type="hidden" id="__URL_DETALLE" value="@Url.Action("DetalleSede","Sede")" />
<input type="hidden" id="__URL_ELIMINAR" value="@Url.Action("EliminarSede","Sede")" />
<input type="hidden" id="__URL_REGISTRO" value="@Url.Action("RegistrarSede","Sede")" />
<input type="hidden" id="__ID_ACTUAL" />

@section PageHeader{
    <header class="masthead mb-auto">
        <div class="inner">
            <h3 class="masthead-brand">BibloMax</h3>
            <nav class="nav nav-masthead justify-content-center">
                <a class="nav-link" href="@Url.Page("/Principal/SOIndex")">Inicio</a>
                <a class="nav-link active" href="@Url.Page("/Sedes/SOSedes")">Sedes</a>
                <a class="nav-link" href="@Url.Page("/Complejos/SOComplejos")">Complejos</a>
                <a class="nav-link" href="@Url.Page("/Principal/SONosotros")">Nosotros</a>
            </nav>
        </div>
    </header>
}

<main role="main" class="inner cover">

    <div class="d-flex flex-wrap bg-light text-dark text-left" style="margin-bottom:5%; padding:15px;">

        <div class="form-group col-12">
            <h3>Sedes</h3>
        </div>

        <div class="form-group col-lg-6 col-sm-12">
            <label for="email">Nombre:</label>
            <input type="text" class="form-control" id="txtNombre" placeholder="Nombre">
        </div>
        <div class="form-group col-lg-6 col-sm-12">
            <label for="pwd">Ubicación:</label>
            <input type="text" class="form-control" id="txtUbicacion" placeholder="Ubicación">
        </div>
        <div class="form-group col-lg-6 col-sm-12">
            <label for="email">N° Complejos:</label>
            <input type="number" class="form-control" id="txtComplejos" placeholder="N° Complejos">
        </div>
        <div class="form-group col-lg-6 col-sm-12">
            <label for="pwd">Presupuesto:</label>
            <input type="number" class="form-control" id="txtPresupuesto" placeholder="Presupuesto">
        </div>
        <div class="d-flex flex-wrap flex-row-reverse col-12">
            <button type="button" class="m-1 col-lg-3 col-12 btn btn-dark btn-block" id="btnGuardar">Guardar</button>
            <button type="button" class="m-1 col-lg-3 col-12 btn btn-dark btn-block" id="btnLimpiar">Limpiar</button>
        </div>
    </div>

    <table id="example" class="display" style="width:100%">
        <thead class="bg-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Ubicación</th>
                <th scope="col">N° Complejos</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody style="background-color: rgba(0,0,0,0.3);" class="text-dark">
        </tbody>
    </table>

</main>

@section Javascript{
    <script src="~/js/sedes/sedes.js"></script>
}